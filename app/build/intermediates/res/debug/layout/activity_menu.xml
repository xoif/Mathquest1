<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign"
    tools:context="com.example.rechner.MainActivity" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/Schritte"
            android:id="@+id/stepButton"
            android:onClick="schrittButton"
            android:background="@drawable/hintergrund"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/Zeit"
            android:id="@+id/timeButton"
            android:onClick="zeitButton"
            android:background="@drawable/hintergrund"
            android:layout_toRightOf="@+id/stepButton"
            android:layout_alignBottom="@+id/stepButton"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="highscoreButton"
            android:id="@+id/highscore_button"
            android:background="@drawable/hintergrund"
            android:text="@string/Highscore"
            android:layout_toRightOf="@+id/timeButton"
            android:layout_alignBottom="@+id/stepButton"
            android:layout_marginLeft="10dp"
            />

               </LinearLayout>

